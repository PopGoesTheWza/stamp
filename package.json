{
  "name": "stamp",
  "version": "0.1.0",
  "license": "MIT",
  "description": "The stamp ecosystem",
  "author": "",
  "contributors": [
    "Vasyl Boroviak <kore.sar@gmail.com> (https://twitter.com/kore_sar)",
    "Tim Routowicz <troutowicz@gmail.com> (https://twitter.com/troutowicz)",
    "Carl Olsen <unstoppablecarlolsen@gmail.com> (https://twitter.com/unstoppableCarl)",
    "Daniel K. <klenicak@gmail.com> (https://twitter.com/FredyCrueger)",
    "Christopher Hiller <boneskull@boneskull.com> (https://twitter.com/b0neskull)"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:stampit-org/stamp.git"
  },
  "scripts": {
    "build:clean": "rimraf -rf ./packages/*/build ./packages/*/dist ./packages/*/node_modules",
    "build": "cross-env EXCLUDE_DIST=\"true\" node ./scripts/build.js ",
    "build:dist": "node ./scripts/build.js",
    "ci": "npm run bootstrap npm run test",
    "test": "jest",
    "posttest": "npm run lint",
    "prepublish": "npm run build:clean npm run build:dist npm run bootstrap",
    "bootstrap": "lerna bootstrap",
    "publish": "lerna publish -i -- --access=public",
    "updated": "lerna updated",
    "lint": "jshint packages/**/*.js"
  },
  "devDependencies": {
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-syntax-trailing-function-commas": "^6.22.0",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-plugin-transform-es2015-destructuring": "^6.23.0",
    "babel-plugin-transform-es2015-parameters": "^6.24.1",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-plugin-transform-inline-imports-commonjs": "^1.2.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-plugin-transform-strict-mode": "^6.24.1",
    "babel-preset-env": "^1.6.1",
    "cross-env": "^5.1.1",
    "jest": "^20.0.1",
    "jshint": "^2.9.4",
    "lerna": "^2.0.0",
    "rimraf": "^2.6.2",
    "rollup": "^0.50.0",
    "rollup-plugin-babel": "^3.0.2",
    "rollup-plugin-commonjs": "^8.2.1",
    "rollup-plugin-flow": "^1.1.1",
    "rollup-plugin-json": "^2.1.1",
    "rollup-plugin-node-builtins": "^2.1.1",
    "rollup-plugin-node-globals": "^1.1.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-uglify": "^2.0.1",
    "setenv": "^1.0.3",
    "uglify-es": "^3.1.6"
  },
  "jshintConfig": {
    "node": true,
    "globals": {
      "afterAll": false,
      "afterEach": false,
      "beforeAll": false,
      "beforeEach": false,
      "check": false,
      "describe": false,
      "expect": false,
      "gen": false,
      "it": false,
      "fit": false,
      "jest": false,
      "pit": false,
      "require": false,
      "test": false,
      "xdescribe": false,
      "xit": false,
      "xtest": false
    }
  },
  "jest": {
    "coverageReporters": [
      "html",
      "text"
    ]
  },
  "dependencies": {
    "@stamp/compose": "^0.1.5"
  }
}
